extends layout

block content
    .w3-card-4
        header.w3-containe.w3-teal
            h1 
                span Compositores List 
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +


        .w3-container
            table.w3-table-all
                tr
                    th ID
                    th Name
                each compositor in lCompositores 
                    tr
                        td= compositor.id
                        td
                            a(href="/compositores/" + compositor.id)= compositor.nome 
                        td 
                            span [
                            a(href="/compositores/edit/" + compositor.id) Edit 
                            span ]
                            span [
                            a(href="/compositores/delete/" + compositor.id) Delete 
                            span ]
        footer.w3-container.w3-blue
            h5 Generated by EngWeb2024 in #{date}
