extends layout

block content
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 compositor #{compositor.nome}
                

            .w3-container 
                ul.w3-ul.w3-card-4(style="width:50%") 
                    li 
                        b Nome: 
                        span= compositor.nome   
                    li 
                        b Número:  
                        span= compositor.id
                    li 
                        b Biografia: 
                        span= compositor.bio   
                    li 
                        b Data de nascimento:  
                        span= compositor.dataNasc
                    li 
                        b Data de óbito: 
                        span= compositor.dataObito   
                    li 
                        b Periodo:  
                        span= compositor.periodo


                footer.w3-container.w3-teal 
                    address 
                        span Gerado por gcompositor::RPCW2022 em #{data} - [
                        a(href="/") Voltar
                        spann ]
                
            